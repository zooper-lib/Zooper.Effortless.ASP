<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>

        <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
        <IsRoslynComponent>true</IsRoslynComponent>

        <RootNamespace>ZEA.Architecture.Patterns.StrongTypes.Generator</RootNamespace>

        <IsPackable>true</IsPackable>
        <PackageId>ZEA.Architecture.Patterns.StrongTypes.Generator</PackageId>

        <IncludeProjectReferences>false</IncludeProjectReferences>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.4">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.3.0"/>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.3.0"/>
    </ItemGroup>

    <ItemGroup>
        <Content Include="..\ZEA.Architecture.Patterns.StrongTypes.Generator.Attributes\bin\$(Configuration)\$(TargetFramework)\ZEA.Architecture.Patterns.StrongTypes.Generator.Attributes.dll">
            <Pack>true</Pack>
            <PackagePath>lib\$(TargetFramework)\</PackagePath>
            <Visible>False</Visible>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\ZEA.Architecture.Patterns.StrongTypes.Generator.Attributes\ZEA.Architecture.Patterns.StrongTypes.Generator.Attributes.csproj">
            <PrivateAssets>All</PrivateAssets>
            <IncludeAssets>None</IncludeAssets>
            <ExcludeAssets>All</ExcludeAssets>
        </ProjectReference>
    </ItemGroup>


</Project>
